{
    "extends": "@bitspace/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "declaration": false
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../../packages/supabase/src/browser.ts",
        "../../packages/supabase/src/middleware.ts",
        "../../packages/supabase/src/server.ts"
    ],
    "exclude": ["node_modules"]
}
